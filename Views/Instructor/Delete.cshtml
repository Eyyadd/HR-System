@model Instructor
@{
    ViewBag.Title = "Delete Instructor ";
    SelectList departments = new SelectList(ViewBag.Department, "Id", "Name");
    SelectList Courses = new SelectList(ViewBag.Courses, "Id", "Name");
}

<a class="btn btn-success hBack" asp-action="Index" asp-controller="Instructor" style="">Back</a>    <a class="btn btn-primary hBack" style="margin-left:1050px" asp-action="Edit" asp-route-id="@Model.Id" asp-controller="Instructor">Edit</a>
<br />
<br />
<h3 style="margin-left:500px;color:#f4623a;background-color:white;width:200px" id="EditForm">Delete Form</h3>
<br />
<br />
<form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="form-control" style="max-width:750px" id="center">
    <div style="margin-left:100px;margin-top:50px;">
        <label style="font-weight:bold" asp-for="Name">Name</label>
        <input asp-for="Name" style="color:#f4623a; width:400px" class="form-control" />
    </div>
    <div style="margin-left:100px;">
        <label style="font-weight:bold" asp-for="Image"></label>
        <input style="color:#f4623a; width:400px" asp-for="Image" class="form-control" />
    </div>
    <div style="margin-left:100px;">
        <label style="font-weight:bold" asp-for="Address"></label>
        <input style="color:#f4623a; width:400px" asp-for="Address" class="form-control" />
    </div>
    <div style="margin-left:100px;">
        <label style="font-weight:bold" asp-for="Salary"></label>
        <input style="color:#f4623a; width:400px" asp-for="Salary" class="form-control" />
    </div>
    <div style="margin-left:100px;">
        <label style="font-weight:bold" asp-for="DepID">Department</label>
        <select style="color:#f4623a; width:400px" asp-for="@Model.DepID" asp-items="departments" class="form-control" ></select>
    </div>
    <div style="margin-left:100px;">
        <label style="font-weight:bold" asp-for="CourseId">Course</label>
        <select style="color:#f4623a; width:400px" asp-for="@Model.CourseId" asp-items="Courses" class="form-control"></select>
    </div>
    <br />
      <input type="submit" value="Delete" class="btn btn-danger" style="margin-left:100px; margin-bottom:50px;width:400px" onclick="return confirm('Are you sure to delete this instructor ? ')" />
</form>
<style>
    #center {
        position: absolute;
        left: 0;
        right: 0;
        margin: auto;
        border-radius: 2rem;
    }

    #EditForm {
        padding: 1.25rem 2.25rem;
        font-size: 0.85rem;
        font-weight: 700;
        text-transform: uppercase;
        border: none;
        border-radius: 10rem;
    }
</style>
